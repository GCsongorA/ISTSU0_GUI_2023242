<UserControl x:Class="ISTSU0_GUI_2023242.Client.Views.Guitarist.UpdateGuitaristView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISTSU0_GUI_2023242.Client.Views.Guitarist"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="DarkGray">
    <Grid>
        <StackPanel>
            <Label Content="Guitarist to update (GUID):" Margin="5" Padding="10"/>
            <TextBox x:Name="txbGuitaristGuid" Margin="5" Padding="10"/>
            <Label Content="Band (GUID):" Margin="5" Padding="10"/>
            <TextBox x:Name="txbBandGuid" Margin="5" Padding="10"/>
            <Label Content="Age:" Margin="5" Padding="10"/>
            <TextBox x:Name="txbAge" Margin="5" Padding="10"/>
            <Button Content="Update" Click="UpdateButton_Click" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</UserControl>
