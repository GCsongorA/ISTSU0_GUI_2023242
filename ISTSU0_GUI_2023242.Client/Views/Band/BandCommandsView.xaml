<UserControl x:Class="ISTSU0_GUI_2023242.Client.Views.BandCommandsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISTSU0_GUI_2023242.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="DarkGray">
    <Grid>
        <StackPanel Margin="5">
            <Button Content="Does this band have multiple guitarists?" Click="MultipleGuitarists_Click" Margin="5" Padding="10"/>
            <Button Content="What guitars does this band have?" Click="WhatGuitars_Click" Margin="5" Padding="10"/>
            <Button Content="Show all bands" Click="GetAll_Click" Margin="5" Padding="10"/>
            <Button Content="Search a band" Click="GetOne_Click" Margin="5" Padding="10"/>
            <Button Content="Update a band" Click="Update_Click" Margin="5" Padding="10"/>
            <Button Content="Add a band" Click="Create_Click" Margin="5" Padding="10"/>
            <Button Content="Delete a band" Click="Delete_Click" Margin="5" Padding="10"/>
        </StackPanel>
        <ContentControl x:Name="ContentArea" />
    </Grid>
</UserControl>
