<UserControl x:Class="ISTSU0_GUI_2023242.Client.Views.CreateBandView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ISTSU0_GUI_2023242.Client.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="DarkGray">
    <Grid>
        <StackPanel Margin="5">
            <Label Content="Name: " Padding="10"/>
            <TextBox x:Name="txbName" Padding="10" />
            <Label Content="Genre (Metal, Rock, Pop, Blues, Jazz, RapMetal, DeathCore):" Padding="10"/>
            <TextBox x:Name="txbGenre" Padding="10"/>
            <Button Content="Add" Click="AddButton_Click" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</UserControl>
