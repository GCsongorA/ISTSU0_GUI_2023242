<Window x:Class="ISTSU0_GUI_2023242.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISTSU0_GUI_2023242.Client"
        xmlns:views="clr-namespace:ISTSU0_GUI_2023242.Client.Views" xmlns:views1="clr-namespace:ISTSU0_GUI_2023242.Client.Views.Band"
        mc:Ignorable="d"
        Title="GuitarDB" Height="450" Width="800" Background="DarkGray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Bands" Click="Band_Click" Grid.Row="0"/>
        <Button Content="Guitarists" Click="Guitarist_Click" Grid.Row="1" />
        <Button Content="Guitars" Click="Guitar_Click" Grid.Row="2" />
        <ContentControl x:Name="ContentArea" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3" Background="DarkGray"/>
    </Grid>
</Window>
